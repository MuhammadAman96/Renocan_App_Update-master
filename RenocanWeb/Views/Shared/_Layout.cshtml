<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>RenoCAN | The Best Renovation Review Site</title>
    <link rel="shortcut icon" href="~/Assets/images/favicon.png">
    @*<link href="css/style.css" rel="stylesheet" type="text/css">*@
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.2/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,300,100,700,900" rel="stylesheet">
    <link href="~/Assets/css/lightbox.min.css" rel="stylesheet" />
    <link href="~/Assets/css/style.css" rel="stylesheet" />
   
</head>


<body>
    <div class="overlay"></div>
    @Html.Partial("_header")
    <div id="searchbox">
        <div class="close"></div>
        <form action="">
            <input type="text" placeholder="Search Company here...">
            <select name="" id="serach">
                <option value="">Mississuaga</option>
            </select>
            <button type="submit">Search</button>
        </form>
    </div>
    <div id="menubox">
        <ul>
            <li><a href="">Write a Review</a></li>
            <li><a href="">Browse Categories</a></li>
            <li><a href="">Sign Up</a></li>
            <li><a href="">Login</a></li>
            <li><a href=""><button>Business Sign Up</button></a></li>
        </ul>
    </div>
    @RenderBody()
    @Html.Partial("_footer")
    <script src="https://code.jquery.com/jquery-2.2.3.min.js"></script>
    <script src="~/Assets/js/lightbox.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <link href="~/Assets/css/lightbox.min.css" rel="stylesheet" />
    <script src="~/Assets/js/rating.js"></script>

    <script>
        $(document).ready(function () {
            $('#search').click(function () {
                $("#searchbox").show();
                $(".overlay").show();
                return false;
            });

            $('.overlay').click(function () {
                $("#searchbox").hide();
                $(".overlay").hide();
            });

            $('#searchmob').click(function () {
                $("#searchbox").toggle();
                return false;
            });

            $('#menu').click(function () {
                $("#menubox").toggle();
                return false;
            });

            
              


    });
    </script>

</body>
</html>
